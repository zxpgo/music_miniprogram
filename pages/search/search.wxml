<view class="searchContainer">
  <!--头部搜索区域-->
  <view class="header">
    <view class="searchInput" bindtap="handleSearch">
      <text class="iconfont icon-sousuo searchIcon"></text>
      <input type="text" value="{{searchContent}}" placeholder="{{placeholderContent}}" placeholder-class="placeholder" bindinput="handleInput" />
      <view class="clear" bindtap="clearSearchContent" hidden="{{!searchContent}}">X</view>
    </view>
    <text class="cancel">取消</text>
  </view>

  <block wx:if="{{searchList.length}}">
    <!--搜索内容展示-->
    <view class="showSearchContent">
      <view class="searchContent">搜索内容: {{searchContent}}</view>
      <view class="searchList">
        <view class="searchItem" wx:for="{{searchList}}" wx:key="id">
          <text class="iconfont icon-sousuo"> </text>
          <text class="content"> {{item.name}}</text>
        </view>
      </view>
    </view>
  </block>

  <block wx:else>
    <!--搜索历史记录-->
    <view class="history" wx:if="{{historyList.length}}">
      <view class="title">历史</view>
      <view class="historyItem" wx:for="{{historyList}}" wx:key="item">
        {{item}}
      </view>
      <view class="iconfont icon-shanchu delete" bindtap="deleteSearchHistory">
      </view>
    </view>
    <!--热搜榜-->
    <view class="topContainer">
      <view class="title">热搜榜</view>
      <view class="hotList">
        <view class="hotItem" wx:for="{{hotList}}" wx:key="searchWord">
          <text class="order">{{index+1}}</text>
          <text>{{item.searchWord}}</text>
          <image wx:if="{{item.iconUrl}}" src="{{item.iconUrl}}" class="iconImg"></image>
        </view>

      </view>
    </view>
  </block>

</view>