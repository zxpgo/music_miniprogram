/* pages/index/index.wxss */
/*轮播图*/
.indexContainer{
  width: 100%;
  height: 100%;
}

.swiperAttr{
  width: 100%;
  height: 300rpx;
}

.swiperAttr image{
  width: 100%;
  height: 100%;
}

/*导航栏*/
.navContainer{
  display: flex;
  width: 100%;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  border-radius: 50%;
  line-height: 100rpx;
  font-size: 50rpx;
  background: rgb(240, 19, 19);
  color: white;
  margin: 20rpx 0;
}

.navItem text {
  font-size: 28rpx;
}

/*推荐歌曲*/
.recommand {
    padding: 20rpx;
}

.scrollRecommand{
  display: flex;
  height: 300rpx;
  padding-top: 15rpx;
}

.scrollItem {
  margin-right: 20rpx;
  width: 200rpx;
}

.scrollRecommand image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollRecommand .scrollItem text {
  font-size: 26rpx;
  /*一行省略*/
  /*
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  */

  /*多行省略*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /*设置行数*/
}

/*排行榜*/
.topList{
  padding: 20rpx;
}

.topListSwiper {
  padding-top: 15rpx;
  height: 400rpx;
}

.swiperItem {
  width: 96%;
  background: #fefefe;
}

.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}

.musicItem {
  display: flex;
  padding-bottom: 10rpx;
}

.musicItem image {
  width: 100rpx;
  height: 100rpx;
}

.musicItem .count {
  width:  100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.musicItem .musicName {
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;

  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}